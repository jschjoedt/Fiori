<mvc:View
    controllerName="ns.businesspartners.controller.Suppliers"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <List 
                            id="dataList" 
                            noDataText="{i18n>noData}"
                            items="{/zdemo_cds_assoc}">
                            <items>
                                <StandardListItem 
                                    type="Navigation"
                                    title="{carrid}"
                                    tooltip="{carrid} - {connid}"
                                    description="{connid}"
                                    />
                            </items>
                        </List>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
