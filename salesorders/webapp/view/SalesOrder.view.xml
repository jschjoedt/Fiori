<mvc:View 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
	xmlns:smartList="sap.ui.comp.smartlist"
    controllerName="sap.sales.order.info.salesorders.controller.SalesOrder" 
    xmlns:smartTable="sap.ui.comp.smarttable"
    displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
				<content>
                	<smartList:SmartList 
                        id="ItemsST" 
                        entitySet="SEPM_I_SalesOrderItem_E" 
                        header="Salesorder List"
		                showRowCount="true" 
                        showFullScreenButton="true" 
                        enableAutoBinding="true"
		                selectFields="SalesOrder,SalesOrderItem,SalesOrderItem_Text,Product,GrossAmountInTransacCurrency,TransactionCurrency">
                        <smartList:listItemTemplate>
                            <StandardListItem
                                title="{SalesOrder} -> {SalesOrderItem}"
                                description="{SalesOrderItem_Text}"
                                info="{Product} - ({GrossAmountInTransacCurrency} {TransactionCurrency})"
                                type="Navigation"
                                press="onListItemPress"/>
                        </smartList:listItemTemplate>
                	</smartList:SmartList>
				</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>